{
  "name": "metacartag",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "MetaCarTag",
    "NEXT_PUBLIC_APP_DESCRIPTION": "Decentralized Vehicle Management",
    "NEXT_PUBLIC_APP_URL": "https://metacartag.com"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
} 